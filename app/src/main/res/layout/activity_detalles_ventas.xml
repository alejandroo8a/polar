<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"

tools:context="arenzo.alejandroochoa.osopolar.Activities.DetallesVentasActivity"
tools:showIn="@layout/activity_detalles_ventas">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <Button
        android:id="@+id/button2"
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/botones"
        android:text="Detalle Venta"
        android:textColor="@color/icons"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        />


    <!-- Card Ultima Actualizacion-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin">

        <LinearLayout
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Producto"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="producto"
                android:textSize="15dp"

                android:id="@+id/textproducto"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- Card status -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin">

        <LinearLayout
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />
            <!-- Texto de ejemplo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/textcantidad"
                android:textSize="15dp"

                />

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <!-- Card FUente -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin">

        <LinearLayout
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio Unitario"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />
            <!-- Texto de ejemplo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textprecio"
                android:textSize="15dp"

                android:text="" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <!-- Card  Formula -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin">

        <LinearLayout
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Etiqueta Amigos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />
            <!-- Texto de ejemplo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15dp"

                android:id="@+id/textsub"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <!-- Card  Formula -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin">

        <LinearLayout
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Etiqueta Amigos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Venta"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />
            <!-- Texto de ejemplo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15dp"

                android:id="@+id/texttotal"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnCancelarVenta"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_cancel"
        android:text="Cancelar"
        android:textAlignment="textEnd"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</LinearLayout>




</android.support.v4.widget.NestedScrollView>
